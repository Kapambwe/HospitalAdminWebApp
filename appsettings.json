{
  "UseMockServices": true,
  "ApiGateway": {
    "BaseUrl": "https://api.hospital.local"
  },
  "Backend": {
    "BaseUrl": "https://localhost:7001"
  },
  "AIAssistant": {
    "Enabled": true,
    "ConfigPath": "AI-Workflows/HospitalAdmin/agent-config.json",
    "LogLevel": "Information",
    "CacheEnabled": true,
    "CacheDurationSeconds": 300
  },
  "Ollama": {
    "Enabled": true,
    "BaseUrl": "http://localhost:11434",
    "Model": "llama3.2",
    "AlternativeModels": ["mistral", "codellama", "medllama"]
  },
  "MCP": {
    "Enabled": true,
    "Servers": [
      {
        "Name": "HospitalAdminTools",
        "Url": "http://localhost:8001/mcp",
        "Tools": ["staff-scheduler", "bed-predictor", "resource-allocator"]
      },
      {
        "Name": "DecisionEngineTools",
        "Url": "http://localhost:8002/mcp",
        "Tools": ["queue-optimizer", "financial-forecaster", "infection-analyzer"]
      }
    ]
  },
  "ExternalSystems": {
    "ClinicalSystemUrl": "http://localhost:5001",
    "ClinicalSystemName": "Clinical Care System",
    "PatientPortalUrl": "http://localhost:5002",
    "MinistryHealthUrl": "http://localhost:5003"
  }
}
